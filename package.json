{
  "name": "markdown-viewer",
  "version": "1.0.0",
  "description": "A TypeScript Markdown file previewer with live rendering and diagram support",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "clean": "rm -rf dist"
  },
  "keywords": ["markdown", "viewer", "typescript", "mermaid", "plantuml"],
  "author": "Mi Code",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "marked": "^9.1.6",
    "marked-highlight": "^2.0.6",
    "prismjs": "^1.29.0",
    "mermaid": "^10.6.1",
    "plantuml-encoder": "^1.4.0",
    "chokidar": "^3.5.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}